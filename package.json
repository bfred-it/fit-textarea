{
	"name": "fit-textarea",
	"description": "Automatically expand a <textarea> to fit its content, in a few bytes",
	"version": "1.1.0",
	"repository": "bfred-it/fit-textarea",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"text area",
		"resize",
		"fit to content",
		"scale",
		"height",
		"autoresize",
		"autosize",
		"expand",
		"automatic",
		"stretch",
		"input",
		"event",
		"avoid scrollbar",
		"keypress",
		"vertical",
		"increase",
		"vanilla",
		"follow"
	],
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"browserify": "^16.2.2",
		"eslint-config-xo-typescript": "^0.9.0",
		"npm-run-all": "^4.1.3",
		"tape": "^4.10.1",
		"tape-run": "^5.0.0",
		"typescript": "^3.3.3333",
		"xo": "*"
	},
	"scripts": {
		"test": "run-s --silent prepare test:*",
		"test:lint": "xo",
		"test:tape": "browserify test.js | tape-run",
		"prepare": "tsc",
		"build": "tsc",
		"watch": "tsc --watch"
	},
	"xo": {
		"extensions": [
			"ts"
		],
		"envs": [
			"browser"
		],
		"overrides": {
			"files": "**/*.ts",
			"extends": "xo-typescript"
		}
	}
}
